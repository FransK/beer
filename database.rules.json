{
  "rules": {
    "beers": {
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true",
      "$beerid": {
          ".write": "true",
          ".validate": "$beerid === $beerid.toLowerCase() && !data.exists()"
      }
    },
    "breweries": {
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true",
      "$breweryid": {
          ".write": "true",
          ".validate": "$breweryid === $breweryid.toLowerCase() && !data.exists()"
      }
    },
    "characteristics": {
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true",
      "$characterid": {
          ".validate": "$characterid === $characterid.toLowerCase()",
          "$beerid": {
              ".validate": "!data.exists()"
          }
      }
    },
    "features": {
      ".indexOn": "reviewer",
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true"
    },
    "recents": {
      ".indexOn": "timestamp",
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true"
    },
    "reviewers": {
      ".read": "true",
      ".write": "true"
    },
    "reviews": {
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true"
    },
    "types": {
      ".read": "true",
      ".write": "root.child('reviewers/'+auth.uid).exists() && root.child('reviewers/'+auth.uid).child('verified').val() === true",
      "$typeid": {
          ".validate": "$typeid === $typeid.toLowerCase()",
          "$beerid": {
              ".validate": "!data.exists()"
          }
      }
    }
  }
}
